# App Configuration
PROJECT_NAME=Task Management API
VERSION=1.0.0
API_V1_STR=/api/v1

# Database
DATABASE_URL=sqlite:///./task_management.db

# Security
# Generate a secure key: Use 'openssl rand -hex 32' in terminal
SECRET_KEY=replace_with_secure_key_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Authentication
# Generate a secure API key: Use 'openssl rand -hex 32' in terminal
ADMIN_API_KEY=replace_with_secure_admin_key_in_production
ADMIN_USERNAME=admin
# Use a strong password in production
ADMIN_PASSWORD=replace_with_secure_password_in_production

# CORS
CORS_ORIGINS=http://localhost:4200
